/* 容器样式 */
.container {
  padding: 20rpx;
}

/* 顶部滚动区域 */
.week-scroll {
  display: flex;
  height: 100rpx;
  border-bottom: 1px solid #e5e5e5;
}

/* 每个星期的按钮样式 */
.week-item {
  flex: 1 0 20%;
  text-align: center;
  line-height: 100rpx;
  background-color: #f0f0f0;
  margin-right: 10rpx;
  font-size: 28rpx;
  color: #333;
  border-radius: 10rpx;
  padding: 0 10rpx;
  white-space: nowrap; /* 防止文字换行 */
}

.active {
  background-color: #1cbbb4;
  color: #fff;
}

/* 场次展示样式 */
.slots {
  margin-top: 40rpx;
}

.slot {
  background-color: #f5f5f5;
  height: 120rpx;
  margin-bottom: 20rpx;
  line-height: 120rpx;
  text-align: center;
  font-size: 32rpx;
  border-radius: 10rpx;
}

.selected {
  background-color: #1cbbb4;
  color: white;
  animation: bounce 0.3s; /* 点击后的回弹效果 */
}

/* 点击的回弹动画 */
@keyframes bounce {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(0.95);
  }
  100% {
    transform: scale(1);
  }
}
