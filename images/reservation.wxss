/* 场地预约页面样式 */
.scroll-view {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 80rpx;
  border-bottom: 1px solid #e5e5e5;
}

.week-day {
  flex: 1;
  text-align: center;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #333;
  padding: 0 20rpx;
}

.slots {
  margin-top: 20rpx;
  padding: 20rpx;
}

.slot {
  background-color: #f5f5f5;
  height: 120rpx;
  margin-bottom: 20rpx;
  line-height: 120rpx;
  text-align: center;
  font-size: 32rpx;
  border-radius: 10rpx;
}
